<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/Animation_Activity</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="colorPrimary">@color/mColorPrimary</item>
        <item name="colorPrimaryDark">@color/mColorPrimaryDark</item>
        <item name="colorAccent">@color/mColorPrimary</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="backgroundColor">@color/white</item>
        <!--取消水波纹效果-->
        <!--        <item name="android:colorControlHighlight">@android:color/transparent</item>-->
    </style>

    <!--Toolbar-->
    <style name="actionBarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>
    <!--启动页-->
    <style name="AppTheme.Launcher" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/Animation_Splash</item>
    </style>

    <style name="Animation_Splash" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_scale_in</item>
    </style>
    <!--全局活动跳转动画-->
    <style name="Animation_Activity" parent="@android:style/Animation.Activity">
        <!-- 进入一个新的Activity的时候，A->B B进入动画 -->
        <item name="android:activityOpenEnterAnimation">@anim/v_fragment_enter</item>
        <!-- 进入一个新的Activity的时候，A->B A退出动画 -->
        <!--        <item name="android:activityOpenExitAnimation">@anim/slide_right_out</item>-->
        <!-- 退出一个Activity的时候，B返回到A A进入动画 -->
        <!--        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>-->
        <!-- 退出一个Activity的时候，B返回到A B退出动画 -->
        <item name="android:activityCloseExitAnimation">@anim/v_fragment_exit</item>
    </style>

    <style name="EditTextStyle" parent="AppTheme">

        <!--输入框下划线默认颜色-->
        <!--        <item name="colorControlNormal">@color/white</item>-->
        <!--输入框下划线选中状态色-->
        <!--        <item name="colorControlActivated">#ffffff</item>-->
        <!--输入框光标颜色-->
        <item name="colorControlHighlight">@color/mColorPrimary</item>
        <item name="android:background">@drawable/bg_input_selector</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:layout_marginStart">26dp</item>
        <item name="android:layout_marginEnd">26dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">57dp</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="TextViewStyle" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewTitleStyle" parent="TextViewStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextViewLabelStyle" parent="TextViewStyle">
        <item name="android:layout_marginStart">46dp</item>
    </style>

    <style name="ButtonBlueStyle" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">57dp</item>
        <item name="android:background">@drawable/bg_btn_blue</item>
        <item name="android:layout_marginStart">26dp</item>
        <item name="android:layout_marginEnd">26dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>