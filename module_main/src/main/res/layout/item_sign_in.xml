<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.text.TextUtils" />

        <variable
            name="data"
            type="com.czl.lib_base.data.bean.StudentBean" />

        <variable
            name="adapter"
            type="com.muyi.main.classes.adapter.SignInAdapter" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        binding:onRvItemCommand="@{adapter.onItemClickCommand}"
        binding:rvItemBean="@{data}">

        <TextView
            android:id="@+id/tv_status"
            style="@style/TextViewStyle"
            android:layout_width="90dp"
            android:layout_height="42dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="@color/white" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            binding:url="@{data.avatar_url}"
            binding:placeholderRes="@{@drawable/ic_avatar_holder}"
            app:riv_oval="true" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/TextViewStyle"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="14dp"
            android:layout_toStartOf="@id/tv_status"
            android:layout_toEndOf="@id/iv_avatar"
            android:text="@{data.name}"
            android:textColor="@color/theme_blue" />


    </RelativeLayout>
</layout>