<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.muyi.main.my.viewmodel.StudentRegisterViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                style="@style/TextViewTitleStyle"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="100dp"
                android:text="新店学员登记" />

            <TextView
                style="@style/TextViewLabelStyle"
                android:layout_marginTop="50dp"
                android:text="姓名" />

            <com.czl.lib_base.widget.EditTextWithDel
                style="@style/EditTextStyle"
                android:layout_marginTop="14dp"
                android:hint="输入姓名"
                android:inputType="text"
                binding:textChanged="@{viewModel.onStudentNameChangeCommand}" />

            <TextView
                style="@style/TextViewLabelStyle"
                android:layout_marginTop="20dp"
                android:text="性别" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginHorizontal="26dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/bg_input_selector"
                android:paddingHorizontal="20dp"
                binding:onClickCommand="@{viewModel.onGenderChooseCommand}">

                <TextView
                    style="@style/TextViewStyle"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:hint="请选择性别"
                    android:text="@{viewModel.studentGender}"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_down_blue" />
            </RelativeLayout>

            <TextView
                style="@style/TextViewLabelStyle"
                android:layout_marginTop="20dp"
                android:text="年龄" />

            <com.czl.lib_base.widget.EditTextWithDel
                style="@style/EditTextStyle"
                android:layout_marginTop="14dp"
                android:hint="输入年龄"
                android:inputType="number"
                binding:textChanged="@{viewModel.onStudentAgeChangeCommand}" />

            <TextView
                style="@style/TextViewLabelStyle"
                android:layout_marginTop="20dp"
                android:text="家长姓名" />

            <com.czl.lib_base.widget.EditTextWithDel
                style="@style/EditTextStyle"
                android:layout_marginTop="14dp"
                android:hint="输入家长姓名"
                android:inputType="text"
                binding:textChanged="@{viewModel.onParentNameChangeCommand}" />

            <TextView
                style="@style/TextViewLabelStyle"
                android:layout_marginTop="20dp"
                android:text="家长手机" />

            <com.czl.lib_base.widget.EditTextWithDel
                style="@style/EditTextStyle"
                android:layout_marginTop="14dp"
                android:hint="输入家长手机号码"
                android:inputType="number"
                binding:textChanged="@{viewModel.onParentPhoneChangeCommand}" />

            <TextView
                style="@style/TextViewLabelStyle"
                android:layout_marginTop="20dp"
                android:text="左眼视力" />

            <com.czl.lib_base.widget.EditTextWithDel
                style="@style/EditTextStyle"
                android:layout_marginTop="14dp"
                android:hint="输入学员左眼视力"
                android:inputType="number"
                binding:textChanged="@{viewModel.onLeftSightChangeCommand}" />

            <TextView
                style="@style/TextViewLabelStyle"
                android:layout_marginTop="20dp"
                android:text="右眼视力" />

            <com.czl.lib_base.widget.EditTextWithDel
                style="@style/EditTextStyle"
                android:layout_marginTop="14dp"
                android:hint="输入学员右眼视力"
                android:inputType="number"
                binding:textChanged="@{viewModel.onRightSightChangeCommand}" />

            <TextView
                style="@style/TextViewLabelStyle"
                android:layout_marginTop="20dp"
                android:text="双眼视力" />

            <com.czl.lib_base.widget.EditTextWithDel
                style="@style/EditTextStyle"
                android:layout_marginTop="14dp"
                android:hint="输入学员双眼视力"
                android:inputType="number"
                binding:textChanged="@{viewModel.onDiopterChangeCommand}" />

            <TextView
                style="@style/TextViewLabelStyle"
                android:layout_marginTop="20dp"
                android:text="班级" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginHorizontal="26dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/bg_input_selector"
                android:paddingHorizontal="20dp"
                binding:onClickCommand="@{viewModel.onClassChooseCommand}">

                <TextView
                    android:id="@+id/tv_class_name"
                    style="@style/TextViewStyle"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:hint="请选择班级"
                    android:text="@{viewModel.className}"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_down_blue" />
            </RelativeLayout>

            <TextView
                style="@style/TextViewLabelStyle"
                android:layout_marginTop="20dp"
                android:text="学员地区" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="26dp"
                android:paddingHorizontal="20dp"
                android:layout_height="57dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/bg_input_selector"
                binding:onClickCommand="@{viewModel.onRegionChooseCommand}">

                <TextView
                    style="@style/TextViewStyle"
                    android:layout_centerVertical="true"
                    android:hint="请选择地区"
                    android:textColorHint="@color/hint"
                    android:textColor="@color/black"
                    android:text="@{viewModel.storeRegion}"
                    android:layout_alignParentStart="true" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_down_blue" />
            </RelativeLayout>

            <TextView
                style="@style/TextViewLabelStyle"
                android:layout_marginTop="20dp"
                android:text="学员详情地址" />

            <com.czl.lib_base.widget.EditTextWithDel
                style="@style/EditTextStyle"
                android:layout_marginTop="14dp"
                android:hint="请输入详情地址"
                android:inputType="text"
                binding:textChanged="@{viewModel.onStoreLocationChangeCommand}" />

            <Button
                android:id="@+id/btn_login"
                style="@style/ButtonBlueStyle"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="50dp"
                android:text="确认登记"
                binding:onClickCommand="@{viewModel.btnRegisterClick}" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>
</layout>