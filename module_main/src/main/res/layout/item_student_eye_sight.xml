<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.text.TextUtils" />

        <variable
            name="data"
            type="com.czl.lib_base.data.bean.EyesightBean" />

        <variable
            name="adapter"
            type="com.muyi.main.progress.adapter.StudentEyeSightAdapter" />
    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_gray_20"
        android:paddingHorizontal="20dp">

        <TextView
            android:id="@+id/tv_improve"
            style="@style/TextViewStyle"
            android:layout_width="70dp"
            android:layout_height="38dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="@color/white" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_time"
                style="@style/TextViewSmallStyle"
                android:textColor="@color/mColorPrimary" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tv_vision"
                    style="@style/TextViewSmallStyle" />

                <TextView
                    android:id="@+id/tv_left_vision"
                    style="@style/TextViewSmallStyle"
                    android:layout_marginStart="16dp" />

                <TextView
                    android:id="@+id/tv_right_vision"
                    style="@style/TextViewSmallStyle"
                    android:layout_marginStart="10dp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </RelativeLayout>
</layout>