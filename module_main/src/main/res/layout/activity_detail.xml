<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.czl.lib_base.data.bean.MediaBean" />

        <variable
            name="viewModel"
            type="com.muyi.main.detail.viewmodel.DetailViewModel" />
    </data>

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/smart_common"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        binding:onRefreshCommand="@{viewModel.onRefreshCommand}">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    app:cardCornerRadius="30dp">

                    <com.muyi.main.detail.ui.LandLayoutVideo
                        android:id="@+id/detail_player"
                        android:layout_width="match_parent"
                        android:layout_height="180dp" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvTitle"
                    style="@style/TextViewBigStyle"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:text="@{data.title}"
                    android:textColor="@color/mColorPrimary" />

<!--                <androidx.appcompat.widget.AppCompatSeekBar-->
<!--                    android:id="@+id/sb_progress"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginHorizontal="48dp"-->
<!--                    android:layout_marginTop="20dp"-->
<!--                    android:background="@null"-->
<!--                    android:max="100"-->
<!--                    android:maxHeight="6dp"-->
<!--                    android:minHeight="6dp"-->
<!--                    android:splitTrack="false"-->
<!--                    android:progressDrawable="@drawable/player_seek_progress"-->
<!--                    android:thumb="@drawable/player_seek_thumb"/>-->
                <ProgressBar
                    android:id="@+id/sb_progress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_marginHorizontal="48dp"
                    android:layout_marginTop="20dp"
                    android:background="@null"
                    android:max="100"
                    android:maxHeight="6dp"
                    android:minHeight="6dp"
                    android:progressDrawable="@drawable/player_seek_progress" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_time"
                        style="@style/TextViewSmallStyle"
                        android:layout_gravity="center_horizontal"
                        android:text="00:00"
                        android:textColor="@color/mColorPrimary" />

                    <TextView
                        style="@style/TextViewSmallStyle"
                        android:layout_gravity="center_horizontal"
                        android:text=" / "
                        android:textColor="@color/mColorPrimary" />

                    <TextView
                        android:id="@+id/tv_duration"
                        style="@style/TextViewSmallStyle"
                        android:layout_gravity="center_horizontal"
                        android:text="00:00"
                        android:textColor="@color/mColorPrimary" />


                </androidx.appcompat.widget.LinearLayoutCompat>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_backward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="75dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_play_backward" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_forward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="75dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_play_forward" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_pause"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:padding="5dp"
                        android:src="@drawable/ic_play" />

                </RelativeLayout>

                <TextView
                    style="@style/TextViewBigStyle"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="50dp"
                    android:text="播放列表" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/ry_common"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="14dp" />


            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.core.widget.NestedScrollView>

    </com.scwang.smart.refresh.layout.SmartRefreshLayout>
</layout>