<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.muyi.main.viewmodel.CreateClassViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".mvvm.ui.activity.LoginActivity">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivLogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="90dp"
            android:src="@drawable/ic_big_eye"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvLogo"
            style="@style/TextViewTitleStyle"
            android:layout_marginTop="6dp"
            android:text="创建班级"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivLogo" />

        <TextView
            android:id="@+id/tvNameLabel"
            style="@style/TextViewLabelStyle"
            android:layout_marginTop="40dp"
            android:text="班级名"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLogo" />

        <com.czl.lib_base.widget.EditTextWithDel
            android:id="@+id/etName"
            style="@style/EditTextStyle"
            android:layout_marginTop="14dp"
            android:hint="输入班级名"
            android:inputType="text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvNameLabel"
            binding:textChanged="@{viewModel.onAccountChangeCommand}" />



        <Button
            android:id="@+id/btn_login"
            style="@style/ButtonBlueStyle"
            android:layout_marginTop="70dp"
            android:text="确定"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etName"
            binding:onClickCommand="@{viewModel.btnLoginClick}" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>